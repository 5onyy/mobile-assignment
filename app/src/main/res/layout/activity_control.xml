<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444">


    <ImageButton
        android:id="@+id/BackButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_arrow_back_24"
        />

    <ImageButton
        android:id="@+id/CameraSwitchButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_add_a_photo_24"
        />

    <ImageButton
        android:id="@+id/DefaultModeButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_move"
        />

    <ImageButton
        android:id="@+id/EditModeButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="250dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button_yellow"
        android:src="@drawable/baseline_move"
        />




    <ImageView
        android:id="@+id/objectToMove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_object"

        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CHỈNH VỊ TRÍ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#195EB6"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="10dp"
        android:paddingVertical="8dp" />

    <FrameLayout
        android:id="@+id/joystickBase"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_joystick_base_circle">

        <View
            android:id="@+id/joystickKnob"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_joystick_knob" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/zoomBase"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_joystick_base"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/zoomKnob"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_joystick_knob" />
    </FrameLayout>



</FrameLayout>
