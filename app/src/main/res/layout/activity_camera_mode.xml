<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444">

    <ImageView
        android:id="@+id/fakeCameraBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/camera_demo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center_horizontal">

        <!-- Focus frame -->
        <View
            android:id="@+id/focusFrame"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/focus_frame_border" />

        <!-- Button dưới vùng focus -->
        <Button
            android:id="@+id/captureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#195EB6"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_arrow_back_24"
        />

    <ImageButton
        android:id="@+id/CameraSwitchButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_add_a_photo_24"
        />

    <ImageButton
        android:id="@+id/DefaultModeButton"
        android:layout_gravity="start|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/baseline_move"
        />



    <FrameLayout
        android:id="@+id/joystickBase"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_joystick_base_circle">

        <View
            android:id="@+id/joystickKnob"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_joystick_knob" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/zoomBase"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_joystick_base"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/zoomKnob"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_joystick_knob" />
    </FrameLayout>



</FrameLayout>
